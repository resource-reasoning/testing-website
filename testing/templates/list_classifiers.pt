<!DOCTYPE html>
<html lang="${request.locale_name}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Test262 test run viewer.">

    <title>Test262 Job Viewer</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

     <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.7/css/jquery.dataTables.css">
    <link rel="stylesheet" href="//cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

  </head>
  
  <body>
    <div style="background:#58BCFF !important" class="jumbotron">
      <div class="container">
        <h1>/classifiers</h1>
        <p>List test classifiers</p>
      </div>
    </div>

    <div metal:use-macro="load: menu.pt">
      <li metal:fill-slot="submenu"><a href="${request.route_path('create_classifier')}">Create Classifier</a></li>
    </div>

    <div class="container">
      <div class="row">
        <table id="job-table" class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>ID</th>
              <th>Description</th>
              <th>Field</th>
              <th>Pattern</th>
            </tr>
            <tr tal:repeat="c classifiers">
              <td><a href="${request.route_path('view_classifier', classifier_id=c.id)}">${c.id}</a></td>
              <td>${c.description}</td>
              <td>${c.field}</td>
              <td>${c.pattern}</td>
            </tr>
          </thead>
        </table>
      </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  </body>

</html>
