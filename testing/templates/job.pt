<!DOCTYPE html>
<html lang="${request.locale_name}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Test262 test run viewer.">

    <title>Test262 Job Viewer</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.7/css/jquery.dataTables.css">
    <link rel="stylesheet" href="//cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

  </head>
  
  <body>
    <div class="jumbotron">
      <div class="container">
        <h1>/job/${request.matchdict['job_id']}</h1>
      </div>
    </div>

    <!-- NavBar -->
    <div class="container">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <a class="navbar-brand" href="${request.route_url('view_home')}">Home</a>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    </div>

    <div class="container">
      <table class="table table-bordered">
        <tbody>
          <tr tal:repeat="stat runs_stats">
            <td>${stat[0]}</td>
            <td>${stat[1]}</td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <div class="col-sm-3">
          <div class="form-group">
            <input id="job-no" type="text" class="form-control" placeholder="Enter job number to compare against">
          </div>
        </div>
        <div class="col-sm-9">
          <!-- The buttons are here as a proof of concept atm -->
          <button id="submit" class="btn btn-default">Submit</button>
        </div>
      </div>
    </div>
    <div class="container">
      <table id="job-table" class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>Test Case (Click to view run)</th>
            <th>Result</th>
          </tr>
        </thead>
        
      </table>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="//cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.js"></script>

    <script>
    jQuery(document).ready(function($) {

      
      $("#job-table").dataTable( {
        "ordering": false,
        "processing": true,
        "serverSide": true,
        "ajax" : {
          "url" : "${request.route_path('request_job_table', job_id=request.matchdict['job_id'])}",
          "type" : "GET"
        },
        "columns" : [
          { 
            "data" : "test_id",
            "render" : function (data, type, row) {
              return "<a href='" + row.DT_RowData.link + "'>" + data + "</a>";
            }
          },
          { "data" : "result" }
        ]
      });
      $("#submit").click(function () {
        window.document.location =  '/compare/' + "${request.matchdict['job_id']}/" + $("#job-no").val();
      });

    });
    </script>

  </body>

</html>