<!DOCTYPE html>
<html lang="${request.locale_name}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Test262 test run viewer.">

    <title>Test262 Job Viewer</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.7/css/jquery.dataTables.css">
    <link rel="stylesheet" href="//cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

  </head>
  
  <body>
    <div style="background:#58BCFF !important" class="jumbotron">
      <div class="container">
        <h1>/job/${request.matchdict['job_id']}</h1>
        <p>View job recap</p>
      </div>
    </div>

    <div metal:use-macro="load: menu.pt" />

    <div class="container">
      <div class="row">
        <div class="col-sm-7">
          <table class="table table-bordered">
            <tbody>
              <tr tal:repeat="stat runs_stats">
                <td>${stat[0]}</td>
                <td>${stat[1]}</td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-sm-3">
          <canvas id="stats-pie" width="200" height="200"></canvas>
        </div>
      </div>
      <div class="row form-group">
        <div class="col-sm-3">
          <input id="job-no" type="text" class="form-control" placeholder="Compare against another job">
        </div>
        <div class="col-sm-9">
          <button id="submit-no" class="btn btn-default">Submit</button>
        </div>
      </div>

      <div class="row form-group" id="table-controls">
        <div class="col-sm-3">
          <input type="checkbox" id="classify-filter" /> <label for="classify-filter">Filter out classified
            failures</label>
        </div>
        <div class="col-sm-4">
          <input type="checkbox" id="chk-pass" value="PASS" /> <label for="chk-pass">PASS</label>
          <input type="checkbox" id="chk-fail" value="FAIL" /> <label for="chk-fail">FAIL</label>
          <input type="checkbox" id="chk-abort" value="ABORT" /> <label for="chk-abort">ABORT</label>
          <input type="checkbox" id="chk-timeout" value="TIMEOUT" /> <label for="chk-timeout">TIMEOUT</label>
        </div>
        <div class="col-sm-3">
          <select id="select-group" multiple="multiple">
            <option tal:repeat="group groups" value="${group.id}">${group.description}</option>
          </select>
        </div>
      </div>

      <table id="job-table" class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>Test Case (Click to view run)</th>
            <th>Result</th>
          </tr>
        </thead>
      </table>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <!-- Datatables files via CDN -->
    <script src="//cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.js"></script>
    <!-- Chart.js files via CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.min.js"></script>

    <script>
    var classifyFilter = false;
    var resultFilter = [];
    var groupFilter = [];
    var table;

    function isDefined(val) {
          return !(val === undefined);
      }

    $('#table-controls').change(function() {
      classifyFilter = $('#classify-filter')[0].checked;
      resultFilter = ['#chk-pass', '#chk-fail', '#chk-abort', '#chk-timeout'].map(
        function(el) {
          var el = $(el)[0];
          return el.checked ? el.value : undefined;
        }).filter(isDefined);

      var selg = $('#select-group')[0];
      selg.map = Array.prototype.map;
      groupFilter = selg.map(function(opt) {
        return opt.selected ? opt.value : undefined;
      }).filter(isDefined);

      table.draw();
    });
    jQuery(document).ready(function($) {

      table = $("#job-table").DataTable( {
        "ordering": false,
        "processing": true,
        "serverSide": true,
        "ajax" : {
          "url" : "${request.route_path('request_job_table', job_id=request.matchdict['job_id'])}",
          "type" : "GET",
          "data" : function(d) {
            d.classifyFilter = classifyFilter;
            d.resultFilter = resultFilter;
            d.groupFilter = groupFilter;
          }
        },
        "columns" : [
          { 
            "data" : "test_id",
            "render" : function (data, type, row) {
              return "<a href='" + row.DT_RowData.link + "'>" + data + "</a>";
            }
          },
          { "data" : "result" }
        ]
      });

      $("#submit-no").click(function () {
        window.document.location =  "${request.route_url('view_home')}" + 'compare/' + "${request.matchdict['job_id']}/" + $("#job-no").val();
      });

    });
    </script>

  </body>

</html>
